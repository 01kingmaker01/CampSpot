<%- include('../partials/header') %>

<h1 class="text-center p-3 mt-4">Add a NEW CampGround</h1>
<div class="container jumbotron mt-5" style="width: 30%">
  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Name of Campground"
      />

      <input
        type="url"
        class="form-control mt-2 mb-2"
        id="img"
        name="image"
        placeholder="Image URL"
      />

      <input
        type="number"
        class="form-control mt-2 mb-2"
        id="price"
        name="price"
        step="0.01"
        placeholder="Price"
      />

      <input
        type="text"
        class="form-control mt-2 mb-2"
        id="description"
        name="description"
        placeholder=" Write Description"
      />
      <button class="btn btn-success btn-block">Submit</button>
    </div>
  </form>
</div>
<%- include('../partials/footer') %>
