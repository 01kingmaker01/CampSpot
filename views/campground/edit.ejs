<%- include('../partials/header') %>

<h1 class="text-center p-3 mt-4">EDIT <%= campground.name %></h1>
<div class="container jumbotron qwerty mt-5" style="width: 30%;">
  <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Name of Campground"
        value="<%= campground.name %>"
      />

      <input
        type="url"
        class="form-control mt-2 mb-2"
        id="img"
        name="img"
        placeholder="Image URL"
        value="<%= campground.img %>"
      />

      <input
        type="number"
        class="form-control mt-2 mb-2"
        id="price"
        name="price"
        step="0.01"
        placeholder="Price"
        value="<%= campground.price %>"
      />

      <input
        type="text"
        class="form-control mt-2 mb-2"
        id="description"
        name="description"
        placeholder=" Write Description"
        value=" <%= campground.description %>"
      />

      <button class="btn btn-success btn-block">
        Submit
      </button>
    </div>
  </form>
</div>
<%- include('../partials/footer') %>
