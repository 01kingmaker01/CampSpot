<%- include('./partials/header') %>

<div id="register" class="card card-body m-auto">
  <h1 class="text-center h1 mb-3 p-3">
    <i class="fas fa-user-plus"></i> Admin
  </h1>

  <form action="/users/admin" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control"
        value="<%= typeof name!='undefined' ? name:'' %>"
        required
      />
    </div>
    <div class="form-group">
      <label for="name">Username</label>
      <input
        type="text"
        class="form-control"
        name="username"
        autocomplete="username"
      />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        class="form-control"
        value="<%= typeof email!='undefined' ? email:'' %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="password">Enter Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        autocomplete="current-password"
        minlength="6"
      />
    </div>

    <div class="form-group">
      <label for="password0">Confirm Password</label>
      <input
        type="password"
        name="password0"
        id="password0"
        class="form-control"
        value="<%= typeof password0!='undefined' ? password0:'' %>"
        required
      />
    </div>
    <div class="form-group">
      <label for="secret">Secret Code</label>
      <input
        type="text"
        name="secret"
        id="secret"
        class="form-control"
        value="<%= typeof secret!='undefined' ? secret:'' %>"
        required
      />
    </div>
    <button class="btn btn-success mt-3 btn-block">
      Submit
    </button>
  </form>

  <p class="text-center mt-4">
    Have An Account?
    <a href="/users/login">LogIn</a>
  </p>
</div>
<%- include('./partials/footer') %>
